@model Employee
@{
    var photoPath = $"/images/{Model.PhotoPath ?? "noimage.png"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3 class="nameStyle">@Model.Name</h3>
        </div>

        <div class="text-center cardBodyStyle">
            <img class="card-img-top imageThumbnail" src="@photoPath" />
        </div>
        @if (showButtons)
        {
            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-Id="@Model.Id" class="btn btn-view m-1 buttonShadow">View</a>
                <a asp-page="/Employees/Edit" asp-route-Id="@Model.Id" class="btn btn-edit m-1 buttonShadow">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-Id="@Model.Id" class="btn btn-delete m-1 buttonShadow">Delete</a>
            </div>
        }
    </div>
</div>
