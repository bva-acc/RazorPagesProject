@page
@model RazorPagesProject.Pages.Employees.EmployeesModel
@{
    ViewData["Title"] = "Employees";
}

@if (TempData["SuccessMessage"] != null) {
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<h1>Employees</h1>

<div class="row">
    @foreach (var item in Model.Employees)
    {
        var photoPath = $"/images/{item.PhotoPath ?? "noimage.png"}";
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card-deck">
                <div class="card m-3 cardBoxShadow">
                    <div class="card-header text-center cardHeaderStyle">
                        <h3 class="nameStyle">@item.Name</h3>
                    </div>

                    <div class="text-center cardBodyStyle">
                        <img class="card-img-top imageThumbnail" src="@photoPath" /> 
                    </div>

                    <div class="card-footer text-center">
                        <a asp-page="/Employees/Details" asp-route-Id="@item.Id" class="btn btn-view m-1 buttonShadow">View</a>
                        <a asp-page="/Employees/Edit" asp-route-Id="@item.Id" class="btn btn-edit m-1 buttonShadow">Edit</a>
                        <a href="#" class="btn btn-delete m-1 buttonShadow">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>